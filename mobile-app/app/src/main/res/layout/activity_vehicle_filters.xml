<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Top Navigation (Background) -->
    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a driver for your child"
        android:textColor="#003366"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/tagContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTitle"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_tag_bg"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buttala  ✕"
            android:textColor="#003366" />
    </LinearLayout>

    <!-- Main Filter Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Filters"
                    android:textColor="#003366"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="✕"
                    android:textSize="20sp" />
            </RelativeLayout>

            <!-- Vehicle Section -->
            <Spinner
                android:id="@+id/spinVehicleType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/spinner_border" />

            <Spinner
                android:id="@+id/spinAcType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/spinner_border" />

            <!-- Location Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Filters"
                android:textColor="#003366"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinPickUp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/spinner_border" />

            <Spinner
                android:id="@+id/spinDropOff"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/spinner_border" />

            <!-- School Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Filters"
                android:textColor="#003366"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinSchool"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/spinner_border" />

            <!-- Buttons -->
            <Button
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Filters"
                android:textAllCaps="false"
                android:backgroundTint="#ED5316"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Continue"
                android:textAllCaps="false"
                android:backgroundTint="#FFE5D9"
                android:textColor="#ED5316" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>