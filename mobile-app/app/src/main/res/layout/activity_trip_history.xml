<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Title using Brand Colour #ED5316 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip History"
            android:textColor="#ED5316"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp" />

        <!-- Today Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="#003366"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <!-- Pickup Item (Green Dot) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/dot_green"
                android:layout_marginEnd="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06.45 A.M."
                android:textColor="#888888"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kavidu has been pickup at home"
                android:textColor="#003366" />
        </LinearLayout>

        <!-- Drop-off Item (Red Dot) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/dot_red"
                android:layout_marginEnd="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07.15 A.M."
                android:textColor="#888888"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kavidu has been drop off at School"
                android:textColor="#003366" />
        </LinearLayout>

        <!-- Yesterday Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yesterday"
            android:textColor="#003366"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <!-- Yesterday's Pickup (Green Dot) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/dot_green"
                android:layout_marginEnd="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06.45 A.M."
                android:textColor="#888888"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kavidu has been pickup at home"
                android:textColor="#003366" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>